@using Microsoft.AspNetCore.Identity
@using TaskManagement.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {

            <li class="nav-item mx-3">
                <ul class="navbar-nav flex-grow-2">
                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1" asp-area="" asp-controller="Home"
                           asp-action="ReloadTable"
                           asp-route-StartDate="@ViewBag.StartDate"
                           asp-route-EndDate="@ViewBag.EndDate"
                           asp-route-searchpic="@ViewBag.searchpic"
                           asp-route-searchstatus="@ViewBag.searchstatus"
                           asp-route-searchproject="@ViewBag.searchproject"
                           asp-route-page="@ViewBag.page">HOME</a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1" asp-area="" asp-controller="Dashboard"
                           asp-action="Index"
                           asp-route-StartDate="@ViewBag.StartDate"
                           asp-route-EndDate="@ViewBag.EndDate"
                           asp-route-searchpic="@ViewBag.searchpic"
                           asp-route-searchstatus="@ViewBag.searchstatus"
                           asp-route-searchproject="@ViewBag.searchproject"
                           asp-route-thisyear="-"
                           asp-route-page="@ViewBag.page">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1" asp-area="" asp-controller="Master"
                           asp-action="Index"
                           asp-route-StartDate="@ViewBag.StartDate"
                           asp-route-EndDate="@ViewBag.EndDate"
                           asp-route-searchpic="@ViewBag.searchpic"
                           asp-route-searchstatus="@ViewBag.searchstatus"
                           asp-route-searchproject="@ViewBag.searchproject"
                           asp-route-page="@ViewBag.page">MASTER</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1"
                           asp-controller="Upload"
                           asp-action="DownloadManual">?</a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" 
                   asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserName(User)!</a>
            </li>
            <input type="text" style="display:none" id="myemail" value="@UserManager.GetUserName(User)" />
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item mx-3">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1" asp-area="" asp-controller="Home"
                           asp-action="Index"
                           asp-route-StartDate="@ViewBag.StartDate"
                           asp-route-EndDate="@ViewBag.EndDate"
                           asp-route-searchpic="@ViewBag.searchpic"
                           asp-route-searchstatus="@ViewBag.searchstatus"
                           asp-route-searchproject="@ViewBag.searchproject"
                           asp-route-page="@ViewBag.page">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1" asp-area="" 
                           asp-controller="Dashboard"
                           asp-action="Index"
                           asp-route-StartDate="@ViewBag.StartDate"
                           asp-route-EndDate="@ViewBag.EndDate"
                           asp-route-searchpic="@ViewBag.searchpic"
                           asp-route-searchstatus="@ViewBag.searchstatus"
                           asp-route-searchproject="@ViewBag.searchproject"
                           asp-route-thisyear="-"
                           asp-route-page="@ViewBag.page">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-dark mx-1"
                           asp-controller="Upload"
			               asp-action="DownloadManual">?</a>
                    </li>


                </ul>
            </li>

            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="~/Identity/Account/Login">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Identity/Account/Register">Sign Up</a>
                </li>
            </ul>

        }

    </ul>
